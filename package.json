{
  "name": "angular-component-generator",
  "displayName": "ng component generator",
  "description": "A Visual Studio Code extension to generate Angular components in a specified folder with a right-click context menu.",
  "version": "0.0.2",
  "publisher": "ALS-dev",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angular-component-generator.generateComponent",
        "title": "Generate Angular Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "angular-component-generator.generateComponent",
          "group": "navigation",
          "when": "resourceLangId == ts"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lahadsamb28/angular-generator-extension.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "angular",
    "component",
    "generator"
  ],
  "author": "Abdou Lahad SAMB",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@angular/cli": "^19.0.2"
  }
}
